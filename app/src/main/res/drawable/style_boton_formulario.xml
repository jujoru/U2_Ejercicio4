<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/colorBlanco"
                android:endColor="@color/colorNaranjaOscuro"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorBlanco" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
    <item  >
        <shape>
            <gradient
                android:startColor="@color/colorNaranjaOscuro"
                android:endColor="@color/colorBlanco"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorNaranjaOscuro" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
</selector>
